# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# Database
DATABASE_URL=postgresql+asyncpg://manga:manga@localhost:5432/manga_scraper
DATABASE_URL_SYNC=postgresql://manga:manga@localhost:5432/manga_scraper

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# S3/MinIO Storage
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=manga-images
S3_REGION=us-east-1

# Scraper Settings
SCRAPER_CONCURRENT_BROWSERS=3
SCRAPER_REQUEST_DELAY_MIN=1.0
SCRAPER_REQUEST_DELAY_MAX=3.0
SCRAPER_MAX_RETRIES=3
SCRAPER_BROWSER_TIMEOUT=30000

# Rate Limiting (requests per minute per domain)
RATE_LIMIT_DEFAULT=20
RATE_LIMIT_ASURACOMIC=10
RATE_LIMIT_MANHWATOP=10
RATE_LIMIT_MGEKO=30

# Proxy (optional)
# PROXY_URL=http://user:pass@proxy:port
# PROXY_ROTATION_ENABLED=false
